#include <stdio.h>
#include <conio.h>

#define MAX 6

int Q[MAX];
int front = 0, rear = 0;   /* initialise queue pointers */

/* Insert into queue (linear) */
void insertQ()
{
    int data;
    if (rear == MAX) {
        printf("\n Linear Queue is full");
        return;
    }

    printf("\n Enter data: ");
    scanf("%d", &data);
    Q[rear] = data;
    rear++;
    printf("\n Data Inserted in the Queue ");
}

/* Delete from queue (linear) */
void deleteQ()
{
    if (front == rear) {
        printf("\n\n Queue is Empty..");
        return;
    }

    printf("\n Deleted element from Queue is %d", Q[front]);
    front++;

    /* optional: reset pointers when queue becomes empty, to reuse array */
    if (front == rear) {
        front = rear = 0;
    }
}

/* Display queue elements */
void displayQ()
{
    int i;

    if (front == rear) {
        printf("\n\n\t Queue is Empty");
        return;
    }

    printf("\n Elements in Queue are: ");
    for (i = front; i < rear; i++) {
        printf("%d\t", Q[i]);
    }
}

/* Menu */
int menu()
{
    int ch;
    clrscr();
    printf("\n \tQueue operations using ARRAY..");
    printf("\n -----------**********-------------\n");
    printf("\n 1. Insert ");
    printf("\n 2. Delete ");
    printf("\n 3. Display");
    printf("\n 4. Quit ");
    printf("\n Enter your choice: ");
    scanf("%d", &ch);
    return ch;
}

int main(void)
{
    int ch;
    do {
        ch = menu();
        switch (ch) {
            case 1:
                insertQ();
                break;
            case 2:
                deleteQ();
                break;
            case 3:
                displayQ();
                break;
            case 4:
                printf("\n Exiting...\n");
                break;
            default:
                printf("\n Invalid choice");
        }
        printf("\n\nPress any key to continue...");
        getch();
    } while (ch != 4);

    return 0;
}
