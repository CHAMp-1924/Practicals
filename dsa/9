#include <stdio.h>
#include <conio.h>

void linear_search(int number[], int n, int data)
{
    int i, flag = 0;

    for(i = 0; i < n; i++)
    {
        if(number[i] == data)
        {
            flag = 1;
            break;
        }
    }

    if(flag == 1)
        printf("\n Data found at location: %d", i + 1);
    else
        printf("\n Data not found");
}

void binary_search(int a[], int data, int low, int high)
{
    int mid;

    if(low <= high)
    {
        mid = (low + high) / 2;

        if(a[mid] == data)
            printf("\n Element found at location: %d", mid + 1);

        else if(data < a[mid])
            binary_search(a, data, low, mid - 1);

        else
            binary_search(a, data, mid + 1, high);
    }
    else
    {
        printf("\n Element not found");
    }
}

int main()
{
    int number[25], n, data, i;
    char choice;

    clrscr();

    printf("\n Enter the number of elements: ");
    scanf("%d", &n);

    printf("\n Enter the elements: ");
    for(i = 0; i < n; i++)
        scanf("%d", &number[i]);

    printf("\n Enter the element to be searched: ");
    scanf("%d", &data);

    printf("\n\n Choose search method:");
    printf("\n 1. Linear Search");
    printf("\n 2. Binary Search");
    printf("\n Enter choice: ");
    choice = getche();

    clrscr();

    switch(choice)
    {
        case '1':
            printf("\n ---- Linear Search ----");
            linear_search(number, n, data);
            break;

        case '2':
            printf("\n ---- Binary Search ----");
            printf("\n (Make sure the array is sorted!)");
            binary_search(number, data, 0, n - 1);
            break;

        default:
            printf("\n Invalid choice");
    }

    getch();
    return 0;
}
